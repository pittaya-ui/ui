{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pittaya UI Registry Schema",
  "description": "Schema for Pittaya UI registry",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Component name"
    },
    "type": {
      "enum": ["registry:ui", "registry:hook", "registry:lib"],
      "description": "Component type"
    },
    "description": {
      "type": "string",
      "description": "Component description"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Npm dependencies"
    },
    "devDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Development dependencies"
    },
    "registryDependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Other components needed for the registry"
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "File name"
          },
          "content": {
            "type": "string",
            "description": "File content"
          }
        },
        "required": ["name", "content"]
      },
      "description": "Component files"
    }
  },
  "required": ["name", "type", "files"]
}

